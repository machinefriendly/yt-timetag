{
  "name": "YouTube Time Tag",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Create YouTube time tags with ease",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "YouTube Time Tag"
  },
  "permissions": [
    "tabs",

    "https://www.youtube.com/",
    "https://youtu.be/"
  ],
  "web_accessible_resources": [
  	"contentscript.js.map"
  ]
}
